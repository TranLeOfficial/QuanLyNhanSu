<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.duan_quanlynhansu.GiaoDien.AddStaffActivity">

    <!-- TextView Mô tả Tên Quản lý Nhân Sự-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xanhla"
        android:gravity="center"
        android:text="Quản Lý Nhân Sự"
        android:textColor="@color/red"
        android:textSize="35dp"
        android:textStyle="bold"></TextView>

    <!-- TextView Mô tả Thông tin Thêm Nhân Viên-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        android:text="Thông tin Nhân Viên"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <!-- ImageView Hình ảnh cho Nhân Viên-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgStaffW"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/img_account"></ImageView>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameStaffW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                android:text="Tên Nhân Viên:"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/tvCodeStaffW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
                android:text="Mã Nhân Viên:"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/tvEmailW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Email:"
                android:textSize="15dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtNameStaffW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Nguyễn Văn A"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/txtCodeStaffW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="NV001"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/txtEmailW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="nguyenvana001@gmail.com"
                android:textSize="15dp"></EditText>
        </LinearLayout>
    </LinearLayout>

    <!-- LinearLayout Các Thông tin cần cho Thêm Nhân Viên-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPositionW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Chức vụ:"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/tvGenderW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Giới tính:"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/tvPhoneW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Số điện thoại:"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/tvAddressW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Địa chỉ:"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/tvStatusW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Trình trạng:"
                android:textSize="15dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtPositionW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Trưởng Phòng Nhân Sự"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/txtGenderW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nam"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/txtPhoneW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="0348525769"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/txtAddressW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Thành Phố Hồ Chí Minh"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/txtStatusW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Đã tham gia dự án"
                android:textSize="15dp"></EditText>
        </LinearLayout>
    </LinearLayout>

    <!-- TextView Mô tả Chức Năng-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        android:text="Chức năng"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <!-- LinearLayout Các Button cần thiết-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Button Thêm Nhân Viên-->
        <Button
            android:id="@+id/btnAddStaffW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Thêm Nhân Viên" />

        <!-- Button Cập Nhật Nhân Viên-->
        <Button
            android:id="@+id/btnUpdateStaffW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa Nhân Viên" />

        <!-- Button Tạo Tài Khoản-->
        <Button
            android:id="@+id/btnCreateAccW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Tạo Tài Khoản" />
    </LinearLayout>

    <!-- TextView Mô tả Danh Sách Thêm Nhân Viên-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        android:text="Danh sách Nhân Viên"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <!-- ListView Danh sách Nhân Viên-->
    <ListView
        android:id="@+id/lvAddStaffW"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>